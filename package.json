{
  "name": "dexjs",
  "description": "dexjs : dexvis javascript visualization component library.",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "keywords": [
    "chart",
    "charting",
    "dataviz",
    "visualization",
    "c3",
    "d3"
  ],
  "homepage": "http://dexvis.com",
  "email": "patrick145@msn.com",
  "url": "http://dexvis.wordpress.com",
  "files": [
    "src/dex.js"
  ],
  "main": "dex",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/PatMartin/dexjs.git"
  },
  "dependencies": {
    "jquery"    : "latest",
    "underscore": "latest",
    "jqueryui"  : "latest"
  },
  "devDependencies": {
    "browserify" : "latest",
    "jasmine"    : "latest",
    "jshint"     : "latest",
    "watch"      : "latest",
    "jslint"     : "latest"
  },
  "scripts": {
    "lint": "jslint src/*.js src/*/*.js src/*/*/*.js src/*/*/*/*.js",
    "docs": "jsdoc -d docs -r src/dex.js",
    "build": "browserify src/dex.js --standalone dex > dist/dex.js && browserify src/dex.js --standalone dex | uglifyjs > dist/dex.min.js && browserify src/dex.maps.js --standalone dex > dist/dex.maps.js && browserify src/dex.maps.js --standalone dex | uglifyjs > dist/dex.maps.min.js",
    "build:js": "browserify src/dex.js --standalone dex > dist/dex.js",
    "watch": "watch \"npm run build:js\" src lib"
  }
}
